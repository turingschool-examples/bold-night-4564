<h1>Mechanic Show Page</h1>

<h2><%= @mechanic.name %></h2>
<p><%= @mechanic.years_of_experience %></p>

<% @mechanic.rides.open_rides.order_thrill.each do |ride| %>
<p><%= ride.name %></p>
<% end %>

<div>
<h3>Add a Ride to Workload</h3>
<%= form_with url: "/mechanics/#{@mechanic.id}/rides/#{@ride.id}", method: :post, local: { params: :ride_id }, local: true do |f| %>
  <%= f.label :search, 'Ride ID:' %>
  <%= f.number_field :search %>
  <%= f.submit "Add Ride" %>
  <% end %>
</div>
