<h1><%= @mechanic.name %></h1>
<p>Years of Experience: <%= @mechanic.years_of_experience %></p>
<h2>Work Orders for Open Rides:</h2>
<% @mechanic.rides.order_by_thrill_rating.each do |ride| %>
  <% if ride.open == true %>
    <h3><%= ride.name %></h3>
    <p><%= ride.thrill_rating %></p>
    <% end %>
<% end %>
<h2>Add a Ride to Workload:</h2>
<%= form_with url: "/mechanics/#{@mechanic.id}/work_orders", local: true do |f| %>
<%= f.label :ride_id, "Ride ID" %>
<%= f.number_field :ride_id %>
<%= f.submit 'Submit' %>
<% end %>


