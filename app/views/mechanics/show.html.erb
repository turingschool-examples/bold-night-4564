<h1><%= @mechanic.name %></h1>

<h3>Years of Experience: <%= @mechanic.years_of_experience %></h3>

<h2>Ride Assignments</h2>
<% @mechanic.open_rides.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<h2>Add Ride</h2>
<%= form_with  url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f|%>
  <%= f.label :ride_id, 'Ride ID' %>
  <%= f.text_field :ride_id  %>
  <%= f.submit 'Submit' %>
<% end %>
