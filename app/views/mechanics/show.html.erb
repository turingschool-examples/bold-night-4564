<h2>Mechanic: <%= @mechanic.name %></h2>
<p>Years of Experience: <b><%= @mechanic.years_of_experience %></b></p>

<h3>Working on Rides:</h3>

<% @mechanic.rides.order_by_thrill.each do |ride| %>
  <% if ride.open? %>
    <p>Ride: <b><%= ride.name %></b></p>
  <% end %>
<% end %>

<h3>Add a ride to workload:</h3>

<%= form_with model: @mechanic_ride, method: :post, local: true do |f| %>
  <%= f.label :ride_id, 'Ride Id:' %>
  <%= f.number_field :ride_id %>

  <%= f.hidden_field :mechanic_id, :value => @mechanic.id %>

  <%= f.submit 'Submit' %>
<% end %>
